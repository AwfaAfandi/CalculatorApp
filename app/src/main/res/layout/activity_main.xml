<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="@string/enter_first_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/enter_second_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1text" />


    <Button
        android:id="@+id/Plusbutton"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/circle_button"
        android:text="@string/plus"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num2text" />

    <Button
        android:id="@+id/Minusbutton2"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/circle_button"
        android:text="@string/minus"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/Plusbutton"
        app:layout_constraintTop_toBottomOf="@+id/num2text" />

    <Button
        android:id="@+id/devidebutton3"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/circle_button"
        android:text="@string/devide"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/Minusbutton2"
        app:layout_constraintTop_toBottomOf="@+id/num2text" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="108dp"
        tools:text="Results"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Minusbutton2" />
</androidx.constraintlayout.widget.ConstraintLayout>